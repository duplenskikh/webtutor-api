{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es5",
    "module": "es6",
    "allowJs": true,
    "outDir": "build",
    "isolatedModules": true,
    "moduleResolution": "node",
    "strict": false,
    "baseUrl": "src",
    "noEmit": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "rootDir": "src",
    "typeRoots": [
      "node_modules/@wshcmx/types/lib",
      "node_modules/@wshcmx/types/lib/xml"
    ],
    "esModuleInterop": true,
    "noLib": true
  },
  "include": [
    "src/controllers/**/*",
    "src/services/**/*",
    "src/utils/**/*",
    "src/**/*"
  ]
}
